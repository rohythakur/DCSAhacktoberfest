#include <stdio.h>

int swap(int *xp,int *yp){
    
    int temp;
    temp=*xp;
    *xp=*yp;
    *yp=temp;
    
    return 0;
}

int bubblesort(int arr[], int n){
    int i,j;
    for(i=0;i<n-1;i++)
    {
        for(j=0;j<n-i-1;j++)
        {
            if(arr[j]>arr[j+1])
                swap(&arr[j], &arr[j+1]);
        }
    }
    
    
    
    
    return 0;
}

int display(int arr[],int n){
    int i;
    for(i=0;i<=n;i++)
    {
        printf("%d",arr[i]);
    }
    
    
    
    
    return 0;
}

int main(){
    
    int arr[] = {1,2,4,7,8,9,3};
    int n = sizeof(arr)/sizeof(arr[0]);
    bubblesort(arr, n);
    printf("the sorted array");
    display(arr, n);
    
    
    
    
    return 0;
    
}
